@model Doctor

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h3 class="mb-4">إضافة طبيب جديد</h3>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                    <form asp-action="Create" method="post">
                        <select asp-for="ClinicId" asp-items="ViewBag.Clinics" class="form-select" required>
                            <option value="">-- اختر العيادة --</option>
                        </select>

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">اسم الطبيب</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Specialty" class="form-label">التخصص</label>
                            <input asp-for="Specialty" class="form-control" required />
                            <span asp-validation-for="Specialty" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ClinicId" class="form-label">العيادة</label>
                            <select asp-for="ClinicId" asp-items="ViewBag.Clinics" class="form-select" required>
                                <option value="">-- اختر العيادة --</option>
                            </select>
                            <span asp-validation-for="ClinicId" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">حفظ</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
