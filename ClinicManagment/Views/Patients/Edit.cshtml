@model ClinicManagment.Models.Patient

@{
    ViewData["Title"] = "تعديل بيانات المريض";
}

<h1>تعديل بيانات المريض</h1>

<h4>@Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ClinicId" /> @* Keep ClinicId hidden *@

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            @* Removed Address field as it doesn't exist in the model *@
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label> @* Corrected property name *@
                <input asp-for="BirthDate" type="date" class="form-control" /> @* Corrected property name *@
                <span asp-validation-for="BirthDate" class="text-danger"></span> @* Corrected property name *@
            </div>
            @* Removed Gender field as it doesn't exist in the model *@
            <div class="form-group mt-3">
                <input type="submit" value="حفظ التعديلات" class="btn btn-primary" />
                 <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}